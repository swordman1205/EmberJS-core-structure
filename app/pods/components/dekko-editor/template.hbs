        <li><a class="colorpick-btn" style="background-color: #9fc6e7;" data-edit="foreColor #9fc6e7"></a></li>
        <li><a class="colorpick-btn" style="background-color: #4986e7;" data-edit="foreColor #4986e7"></a></li>
        <li><a class="colorpick-btn" style="background-color: #9a9cff;" data-edit="foreColor #9a9cff"></a></li>
