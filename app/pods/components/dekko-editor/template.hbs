        <li><a class="colorpick-btn" style="background-color: #cabdbf;" data-edit="foreColor #cabdbf"></a></li>
        <li><a class="colorpick-btn" style="background-color: #cca6ac;" data-edit="foreColor #cca6ac"></a></li>
        <li><a class="colorpick-btn" style="background-color: #f691b2;" data-edit="foreColor #f691b2"></a></li>
        <li><a class="colorpick-btn" style="background-color: #cd74e6;" data-edit="foreColor #cd74e6"></a></li>
        <li><a class="colorpick-btn" style="background-color: #a47ae2;" data-edit="foreColor #a47ae2"></a></li>
        <li><a class="colorpick-btn" style="background-color: #444444;" data-edit="foreColor #444444"></a></li>
