        <li><a class="colorpick-btn" style="background-color: #fa573c;" data-edit="foreColor #fa573c"></a></li>
        <li><a class="colorpick-btn" style="background-color: #ff7537;" data-edit="foreColor #ff7537"></a></li>
        <li><a class="colorpick-btn" style="background-color: #ffad46;" data-edit="foreColor #ffad46"></a></li>
        <li><a class="colorpick-btn" style="background-color: #42d692;" data-edit="foreColor #42d692"></a></li>
        <li><a class="colorpick-btn" style="background-color: #16a765;" data-edit="foreColor #16a765"></a></li>
        <li><a class="colorpick-btn" style="background-color: #7bd148;" data-edit="foreColor #7bd148"></a></li>
        <li><a class="colorpick-btn" style="background-color: #b3dc6c;" data-edit="foreColor #b3dc6c"></a></li>
        <li><a class="colorpick-btn" style="background-color: #fbe983;" data-edit="foreColor #fbe983"></a></li>
        <li><a class="colorpick-btn" style="background-color: #fad165;" data-edit="foreColor #fad165"></a></li>
